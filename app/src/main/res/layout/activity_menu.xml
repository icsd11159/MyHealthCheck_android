<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cast_expanded_controller_progress_text_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.myhealthcheck.menu">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginTop="16dp"
        app:srcCompat="@mipmap/fontomenu" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notcon"
        android:layout_marginTop="20dp"
        android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:clickable="true"
        android:src="@mipmap/hc" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView2"
        android:clickable="true"
        android:src="@mipmap/sos" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="MENU"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorPrimary" />


    <TextView
        android:id="@+id/notcon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageButton6"
        android:layout_alignRight="@+id/imageButton6"
        android:layout_below="@+id/textView2"
        android:text="Για να δείτε τις εξετάσεις σας παρακαλώ συνδεθείτε.Για να εκτελεσθεί γρηγορότερα το κουμπί sos,παρακαλώ,χρησιμοποιήστε την δραστηριότητα 'Εισαγωγή SOS αριθμού'" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notcon"
        android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:backgroundTint="@android:color/white"
        android:text="Οι εξετάσεις μου"
        android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color" />



    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        app:srcCompat="@mipmap/frst" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton6"
        android:layout_alignLeft="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton6"
        android:text="Πρώτες Βοήθειες"
        android:textColor="@color/colorPrimaryDark" />

    <ImageButton
        android:id="@+id/sosn"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageButton3"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        app:srcCompat="@mipmap/phoneadd" />


    <ImageButton
        android:id="@+id/backtomain"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_marginBottom="23dp"
        android:background="@color/colorPrimaryDark"
        android:bottomLeftRadius="8dp"
        android:bottomRightRadius="8dp"
        android:fadingEdge="horizontal|vertical"
        android:topLeftRadius="8dp"
        android:topRightRadius="8dp"
        app:srcCompat="?android:attr/homeAsUpIndicator" />


</RelativeLayout>
